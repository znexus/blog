- form_for [@post,@comentario] do |f|
  = f.error_messages
  %p
    = f.label :texto
    %br
    = f.text_area :texto
  %p
    = f.label :nombre
    %br
    = f.text_field :nombre
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :web
    %br
    = f.text_field :web

  %p
    - if @comentario.validate_spam_answer
      = f.hidden_field :spam_answer, :value => @comentario.spam_answer
    - else
      = f.label :spam_answer, "Pregunta Anti SPAM: #{@comentario.spam_question}"
      %br
      = f.text_field :spam_answer, :value => ''

  = f.submit "Registrar comentario"
